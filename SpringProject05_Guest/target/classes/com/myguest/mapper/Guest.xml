 <mapper namespace="com.myguest.mapper.Guest">
 <sql id = "search">
 <where>
 <if test="word!=null and field=='name'">
 name like CONCAT('%',#{word},'%')
 </if>
 <if test="word!=null and field=='name'">
 name like CONCAT('%',#{word},'%')
 </if> 
 </where>
 </sql>
 
 <!-- insert -->
 <insert id="insertGuest" parameterType="com.myspring.model.GuestDTO">
 insert into guest(name,content,grade,created,ipaddr) 
 values(#{name},#{content},#{grade}, now(), #{ipaddr})
 
 </insert>
 
 <select id="listGuest" resultType="com.myspring.model.GuestDTO">
 select * from guest
 <include refid = "search">
  
 
 </include>
 </select>
 
 <select id="listCount" resultType="int">
 select count(*) from guest
 
 <include refid = "search" />
 </select>
 
 </mapper>